}

@article{Safranek-Shrader+2017,
  title = {Chemistry and Radiative Shielding in Star-Forming Galactic Discs},
  author = {{Safranek-Shrader}, Chalence and Krumholz, Mark R. and Kim, Chang-Goo and Ostriker, Eve C. and Klein, Richard I. and Li, Shule and McKee, Christopher F. and Stone, James M.},
