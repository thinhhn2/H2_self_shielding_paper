@article{Wolcott-Green+2011,
  title = {Photodissociation of {{H2}} in Protogalaxies: Modelling Self-Shielding in Three-Dimensional Simulations: {{H}} 2 Self-Shielding in {{3D}} Simulations},
  shorttitle = {Photodissociation of {{H2}} in Protogalaxies},
  author = {{Wolcott-Green}, J. and Haiman, Z. and Bryan, G. L.},
